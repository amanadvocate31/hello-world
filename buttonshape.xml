<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="10dp" />
    <gradient
        android:angle="45"
        android:centerColor="#333333"
        android:centerX="50%"
        android:endColor="#333333"
        android:startColor="#E8E888"
        android:type="linear" />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <size
        android:width="100dp"
        android:height="20dp" />
    <stroke
        android:width="3dp"
        android:color="#bc477b" />
</shape>
